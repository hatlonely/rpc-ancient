{
  "http": {
    "port": 80
  },
  "grpc": {
    "port": 6080
  },
  "grpcInterceptor": {
    "enableTrace": true,
    "validators": ["Default"]
  },
  "jaeger": {
    "serviceName": "rpc-ancient",
    "sampler": {
      "type": "const",
      "param": 1
    },
    "reporter": {
      "logSpans": true
    }
  },
  "rateLimiter": {
    "redis": {
      "wrapper": {
        "enableTrace": false,
        "enableMetric": true,
      }
    },
    "qps": {
      "DB.First": 1
    }
  },
  "mysql": {
    "gorm": {
      "username": "root",
      "password": "",
      "database": "ancient",
      "host": "127.0.0.1",
      "port": 3306,
      "connMaxLifeTime": "60s",
      "maxIdleConns": 10,
      "maxOpenConns": 20
    },
    "wrapper": {
      "enableTrace": true,
      "enableMetric": true,
      "metric": {
        "buckets": [20, 40, 100],
        "constLabels": {
          "name": "rpc-ancient"
        }
      }
    },
    "retry": {
      "attempts": 3,
      "lastErrorOnly": true,
      "delayType": "BackOff"
    },
    "rateLimiterGroup": {
      "type": "Redis",
      "options": {
        "DB.First": {
          "interval": "5s",
          "burst":  2
        }
      }
    }
  },
  "elasticsearch": {
    "uri": "http://127.0.0.1:9200"
  },
  "service": {
    "elasticsearchIndex": "shici"
  },
  "logger": {
    "grpc": {
      "level": "Info",
      "flatMap": true,
      "writers": [{
        "type": "RotateFile",
        "options": {
          "filename": "log/ancient.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }, {
        "type": "ElasticSearch",
        "options": {
          "index": "grpc",
          "idField": "requestID",
          "timeout": "200ms",
          "msgChanLen": 200,
          "workerNum": 2,
          "es": {
            "uri": "http://127.0.0.1:9200"
          }
        }
      }]
    },
    "info": {
      "level": "Info",
      "writers": [{
        "type": "RotateFile",
        "options": {
          "filename": "log/ancient.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }]
    }
  }
}