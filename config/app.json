{
  "grpcGateway": {
    "httpPort": 80,
    "grpcPort": 6080,
    "enableTrace": true,
    "enableMetric": true,
    "enablePprof": true,
    "validators": ["Default"],
    "pascalNameKey": false,
    "jaeger": {
      "serviceName": "rpc-ancient",
      "sampler": {
        "type": "const",
        "param": 1
      },
      "reporter": {
        "logSpans": false
      }
    },
    "rateLimiterHeader": "x-user-id",
    "rateLimiter": {
      "type": "RedisRateLimiterInstance"
    },
    "parallelControllerHeader": "x-user-id",
    "parallelController": {
      "type": "RedisTimedParallelControllerInstance"
    }
  },
  "parallelController": {
    "redis": {
      "redis": {
        "addr": "127.0.0.1:6379"
      },
      "wrapper": {
        "name": "parallelController",
        "enableTrace": true,
        "enableMetric": true
      }
    },
    "defaultMaxToken": 3,
    "maxToken": {
      "123|/api.AncientService/GetAncient": 3
    },
    "interval": "3s",
    "expiration": "10s"
  },
  "rateLimiter": {
    "redis": {
      "redis": {
        "addr": "127.0.0.1:6379"
      },
      "wrapper": {
        "name": "rateLimiter",
        "enableTrace": true,
        "enableMetric": true
      }
    },
    "qps": {
      "123|/api.AncientService/GetAncient": 4
    }
  },
  "mysql": {
    "gorm": {
      "username": "root",
      "password": "",
      "database": "ancient",
      "host": "127.0.0.1",
      "port": 3306,
      "connMaxLifeTime": "60s",
      "maxIdleConns": 10,
      "maxOpenConns": 20
    },
    "wrapper": {
      "name": "mysql",
      "enableTrace": true,
      "enableMetric": true,
      "metric": {
        "buckets": [20, 40, 100],
        "constLabels": {
          "name": "rpc-ancient"
        }
      }
    },
    "retry": {
      "attempts": 3,
      "lastErrorOnly": true,
      "delayType": "BackOff"
    },
    "rateLimiter": {
      "type": "LocalGroup",
      "options": {
        "mysql.DB.First": {
          "interval": "2s",
          "burst":  1
        }
      }
    }
  },
  "esClient": {
    "es": {
      "uri": "http://127.0.0.1:9200"
    },
    "wrapper": {
      "name": "mysql",
      "enableTrace": true,
      "enableMetric": true,
      "metric": {
        "buckets": [20, 40, 100],
        "constLabels": {
          "name": "rpc-ancient"
        }
      }
    },
    "retry": {
      "attempts": 3,
      "lastErrorOnly": true,
      "delayType": "BackOff"
    }
  },
  "service": {
    "elasticsearchIndex": "shici"
  },
  "logger": {
    "grpc": {
      "level": "Info",
      "writers": [{
        "type": "RotateFile",
        "options": {
          "filename": "log/ancient.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json",
            "options": {
              "flatMap": true
            }
          }
        }
      }, {
        "type": "ElasticSearch",
        "options": {
          "level": "Info",
          "index": "grpc",
          "idField": "requestID",
          "timeout": "200ms",
          "msgChanLen": 200,
          "workerNum": 2,
          "es": {
            "es": {
              "uri": "http://127.0.0.1:9200"
            }
          }
        }
      }]
    },
    "info": {
      "level": "Info",
      "writers": [{
        "type": "RotateFile",
        "options": {
          "filename": "log/ancient.log",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }]
    }
  }
}